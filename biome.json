{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": false
	},
	"formatter": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"**/node_modules/**",
			"**/.turbo/**",
			"**/.next/**",
			"**/.vercel/**",
			"**/dist/**",
			"**/build/**",
			"**/out/**"
		]
	}
}
