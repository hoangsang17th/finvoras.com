{
    "name": "shared_ui",
    "version": "1.0.1",
    "description": "Shared UI - Reusable UI components for multiple projects",
    "main": "dist/index.js",
    "module": "dist/index.esm.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "src/styles.css",
        "README.md"
    ],
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup",
        "lint": "eslint src/**/*.{ts,tsx}",
        "type-check": "tsc --noEmit",
        "clean": "rimraf dist",
        "version:patch": "npm version patch",
        "version:minor": "npm version minor",
        "version:major": "npm version major",
        "update-consumers": "cd .. && ./update-ui.sh",
        "release:patch": "npm run version:patch && npm run build && npm run update-consumers",
        "release:minor": "npm run version:minor && npm run build && npm run update-consumers",
        "release:major": "npm run version:major && npm run build && npm run update-consumers"
    },
    "keywords": [
        "react",
        "ui",
        "components",
        "design-system",
        "typescript",
        "tailwind"
    ],
    "author": "Finvoras Team",
    "license": "MIT",
    "peerDependencies": {
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "dependencies": {
        "@radix-ui/react-avatar": "^1.1.1",
        "@radix-ui/react-dialog": "^1.1.2",
        "@radix-ui/react-navigation-menu": "^1.2.1",
        "@radix-ui/react-separator": "^1.1.0",
        "@radix-ui/react-tabs": "^1.1.1",
        "@radix-ui/react-tooltip": "^1.1.3",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "framer-motion": "^12.23.22",
        "lucide-react": "^0.460.0",
        "tailwind-merge": "^2.5.4"
    },
    "devDependencies": {
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@typescript-eslint/eslint-plugin": "^8.15.0",
        "@typescript-eslint/parser": "^8.15.0",
        "autoprefixer": "^10.4.20",
        "eslint": "^8.57.1",
        "eslint-plugin-react": "^7.37.2",
        "eslint-plugin-react-hooks": "^4.6.2",
        "postcss": "^8.4.49",
        "rimraf": "^6.0.1",
        "tailwindcss": "^3.4.15",
        "tsup": "^8.3.5",
        "typescript": "^5.6.3"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        },
        "./styles": "./dist/styles.css"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/hoangsang17th/finvoras.com.git",
        "directory": "finvoras-ui"
    }
}